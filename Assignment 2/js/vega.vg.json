{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Metric Tons of CO2 Emission Per Person (2019)",
  "width": 650,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/js/ne_110m_oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "color": "skyblue", "stroke": "black"}
    },
    {"data": {
      "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/js/ne_110m_graticules_30.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "projection": {"type": "equalEarth"},
      "transform": [
        {
            "calculate": "'Data is not available in ' + datum.properties.NAME",
            "as": "note"
        }
    ],
    "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "#393D47"},
    "encoding": {"tooltip": {"field": "note"}}
    },
    {
    "data": {
      "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/js/ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/data/CO2_emission.csv"
          },
          "key": "Country Name",
          "fields": ["2019"]
        }
      } 
    ],
    "mark": {"type": "geoshape", "stroke": "#393D47"},
    "encoding": {
      "color": {
        "field": "2019",
        "type": "quantitative",
        "title": "Log Scale CO2 Emissions (Tons)",
        "scale": {
          "type": "threshold",
          "domain": [0.1, 3, 6],
          "range": ["#ffffb2", "#fecc5c", "#fd8d3c", "#e31a1c"]
          }
          
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
        {"field": "2019", "type": "quantitative", "title": "2019 CO2 emissions"}
        ]
      }
    }
  ]
}

