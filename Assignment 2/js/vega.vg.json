{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Metric Tons of CO2 Emission Per Person (2019)",
  "width": 700,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Jbar2022/3179/main/Assignment%202/data/CO2_emission_fixed.csv"
        },
        "key": "Country Name",
        "fields": ["2019"]
      }
    } 
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "2019",
      "type": "quantitative",
      "title": "CO2 Emissions on Log scale",
      "scale": {
        "type": "threshold",
        "domain": [0.0002, 0.01, 0.1, 1, 10],
        "range": ["#B1aeae", "#ffffb2", "#fecc5c", "#fd8d3c", "#f03b20", "#bd0026"]
        }
        
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country Name"},
      {"field": "2019", "type": "quantitative", "title": "2019 CO2 emissions"}
    ]
  }
}